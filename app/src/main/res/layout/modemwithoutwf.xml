<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:weightSum="1" 
	android:orientation="vertical"
	android:id="@+id/modemnwfscreen" >
	<LinearLayout android:id="@+id/FrameLayout1"
		android:layout_width="fill_parent" android:weightSum="1" android:layout_height="wrap_content">
		<TextView android:id="@+id/cputext" android:text="CPU"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="0.90"></TextView>
		<ProgressBar android:id="@+id/cpu_load"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_height="wrap_content" android:max="100"
			android:progress="0" android:layout_width="fill_parent"
			android:layout_weight="0.10" />
	</LinearLayout>
	<ScrollView android:id="@+id/modemscrollview"
		android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.93">
		<TextView android:id="@+id/modemview" 
		    android:textIsSelectable="false"
		    android:text="Pskmail Modem Screen"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="4"></TextView>
	</ScrollView>
	<LinearLayout android:id="@+id/FrameLayout2"
		android:layout_width="fill_parent" android:weightSum="1" android:layout_height="wrap_content" 
		android:layout_weight="0.02">
		<TextView android:id="@+id/sqtext" android:text="S2N"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="0.90"></TextView>
		<ProgressBar android:id="@+id/signal_quality"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_height="wrap_content" android:max="100"
			android:progress="0" android:layout_width="fill_parent"
			android:layout_weight="0.10" />
	</LinearLayout>
	<LinearLayout android:id="@+id/FrameLayout3"
		android:layout_width="fill_parent" android:layout_height="40dp"
		android:weightSum="1" android:layout_weight="0.03">
		<Button android:id="@+id/button_modeUP" android:text="MODE UP"
			android:layout_height="fill_parent" android:layout_weight="0.25" android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_squelchUP" android:text="SQLCH    UP"
			android:layout_height="fill_parent" android:layout_weight="0.25" android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_modemONOFF" android:text="MODEM ON/OFF"
			android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.25"></Button>
		<Button android:id="@+id/button_stopTX" android:text="STOP TX"
			android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.25"></Button>			
	</LinearLayout>
	<LinearLayout android:id="@+id/FrameLayout4"
		android:layout_width="fill_parent" android:layout_height="40dp"
		android:layout_weight="0.03" android:weightSum="1">
		<Button android:id="@+id/button_modeDOWN" android:text="MODE DOWN"
			android:layout_height="fill_parent" android:layout_weight="0.25" android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_squelchDOWN" android:text="SQLCH DOWN"
			android:layout_height="fill_parent" android:layout_weight="0.25" android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_tune" android:text="TUNE"
			android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.25"></Button>
		<Button android:id="@+id/button_waterfallONOFF" android:text="W.FALL ON/OFF"
			android:layout_width="0dp" android:layout_weight="0.25" android:layout_height="fill_parent"></Button>
	</LinearLayout>
</LinearLayout>
