<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" 
	android:id="@+id/termscreen" >

        <TextView
            android:id="@+id/minsec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="30sp" >

        </TextView>
	
    <ScrollView
        android:id="@+id/terminalscrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.00" >

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/terminalview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:text="Pskmail Terminal" >
        </TextView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:weightSum="10" >

        <Button
            android:id="@+id/button_connect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.50"
            android:text="CONN. DISC." >
        </Button>

        <Button
            android:id="@+id/button_sendmail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.50"
            android:text="SEND MAIL" >
        </Button>

        <Button
            android:id="@+id/button_abort"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.50"
            android:text="ABORT" >
        </Button>

        <Button
            android:id="@+id/button_stop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.50"
            android:text="STOP" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:weightSum="1" >

        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.89"
            android:maxLines="3"
            android:textSize="10pt" >

            <requestFocus >
            </requestFocus>
        </EditText>

        <Button
            android:id="@+id/button_sendtext"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.11"
            android:text="SEND TEXT" >
        </Button>
    </LinearLayout>

</LinearLayout>
